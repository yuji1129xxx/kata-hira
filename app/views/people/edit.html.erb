<div class="col-lg-12">
  <div class="row form">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <%= form_for @person, :url => person_path, :html => { :multipart => true } do |form| %>
        <div class="col-xs-12 col-sm-12 col-md-12">
          <h3>Edit Name</h3>
          <div class="form-group">
            <%= form.text_field :name, placeholder: '名前をカタカナで入力してください', value: @person.name, class: 'form-control' %>
          </div>
          <h3>Edit Detail</h3>
          <div class="form-group">
            <%= form.text_area :detail, placeholder: 'Detailを入力してください', value: @person.detail, class: 'form-control' %>
          </div>
          <h3>Edit Photo</h3>
          <%= form.file_field :avatar %>
          <h4>※アップロード前に必ず正方形に成形すること！</h4>
          <input type="submit" value="更新" class="btn btn-primary withripple">
        </div>
      <% end %>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <h3>Delete Keywords</h3>
        <%= link_to "削除", "/people/#{@person.id}/keywords", :class => "btn btn-primary withripple", method: :delete %>
      </div>
    </div>
  </div>
</div>
