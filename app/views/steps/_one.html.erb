<div class="col-lg-12">
  <div class="center">
    <%= image_tag("step1.png", :class => "img-responsive") %>
  </div>
  <% @people.each do |person| %>
    <div class="row form">
      <div class="col-xs-6 col-sm-6 col-md-6">
        <%= image_tag(person_photo(person), :class => "img-responsive") %>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <h3><%= person.name %></h3>
        <h4>keywords</h4>
        <% person.keywords.each do |keyword| %>
          <p>◆ <%= keyword.name %></p>
        <% end %>
        <%= link_to "詳細", person_path(person), :class => "btn btn-info normal" %>
      </div>
    </div>
  <% end %>
  <%= paginate(@people) %>
</div>
