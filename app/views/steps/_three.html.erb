<div class="col-lg-12">
  <div class="center">
    <%= image_tag("step3.png") %>
  </div>
  <div class="row form">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <% if @person.avatar.present? %>
        <%= image_tag @person.avatar.url(:medium) %>
      <% elsif @person.pfile %>
        <%= image_tag("people/#{@person.pfile}.png", :size => "248×248") %>
      <% else %>
        <%= image_tag("no_image1.png", :size => "248×248") %>
      <% end %>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <h3><%= @person.name %></h3>
      <h4>keywords</h4>
      <% @person.keywords.each do |keyword| %>
        <p>◆ <%= keyword.name %></p>
      <% end %>
    </div>
  </div>
  <div class="center"><%= image_tag("x.png") %></div>
  <div class="row form">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <% if @resource.avatar.present? %>
        <%= image_tag @resource.avatar.url(:medium) %>
      <% elsif @resource.pfile %>
        <%= image_tag("resources/#{@resource.pfile}.png", :size => "248×248") %>
      <% else %>
        <%= image_tag("no_image2.png", :size => "248×248") %>
      <% end %>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <h3><%= @resource.name %></h3>
      <h4>keywords</h4>
      <% @resource.keywords.each do |keyword| %>
        <p>◆ <%= keyword.name %></p>
      <% end %>
    </div>
  </div>
  <div class="center"><%= image_tag("equal.png") %></div>
  <div class="row form">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <%= form_tag(events_path) do %>
        <div class="col-xs-5 col-sm-5 col-md-5">
          <input placeholder="カタカナで入力" type="text" class="form-control" name="kata" autofocus="true"></input>
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 center"><%= image_tag("wind.png") %></div>
        <div class="col-xs-5 col-sm-5 col-md-5">
          <input placeholder="ひらがなで入力" type="text" class="form-control" name="hira"></input>
        </div>
        <textarea placeholder="イベント概要を入力してください" name="detail" cols="30" rows="10" class="form-control"></textarea>
        <input type="hidden" name="person_id" value="<%= @person.id %>">
        <input type="hidden" name="resource_id" value="<%= @resource.id %>">
        <input type="submit" value="送信" class="btn btn-primary withripple">
      <% end %>
    </div>
  </div>
</div>
