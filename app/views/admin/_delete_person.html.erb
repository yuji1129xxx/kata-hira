<div class="col-lg-12">
  <div class="row form">
    <% @people.each do |person| %>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <% if person.avatar.present? %>
          <%= image_tag person.avatar.url(:medium) %>
        <% else %>
          <%= image_tag("no_image1.png", :size => "248×248") %>
        <% end %>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <h3><%= person.name %></h3>
        <h4>keywords</h4>
        <% person.keywords.each do |keyword| %>
          <p>◆ <%= keyword.name %></p>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <%= link_to "削除", person_path(person), method: :delete, :class => "btn btn-info normal" %>
      </div>
    <% end %>
    <%= paginate(@people) %>
  </div>
</div>
