<div class="col-lg-12">
  <div class="row form">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <%= link_to "Back to Top", "/admin" %>
      </div>
      <%= form_tag(resources_path, {:multipart => true}) do %>
        <div class="col-xs-12 col-sm-12 col-md-12">
          <h3>Resource Name</h3>
          <input placeholder="名前をひらがなで入力してください" type="text" class="form-control" name="name" autofocus="true"></input>
          <h3>Resource Detail</h3>
          <textarea placeholder="Detailを入力してください" name="detail" cols="30" rows="10" class="form-control"></textarea>
          <h3>Resource Keywords</h3>
          <input placeholder="キーワード1" type="text" class="form-control" name="keyword1"></input>
          <input placeholder="キーワード2" type="text" class="form-control" name="keyword2"></input>
          <input placeholder="キーワード3" type="text" class="form-control" name="keyword3"></input>
          <input placeholder="キーワード4" type="text" class="form-control" name="keyword4"></input>
          <input placeholder="キーワード5" type="text" class="form-control" name="keyword5"></input>
          <input placeholder="キーワード6" type="text" class="form-control" name="keyword6"></input>
          <input placeholder="キーワード7" type="text" class="form-control" name="keyword7"></input>
          <input placeholder="キーワード8" type="text" class="form-control" name="keyword8"></input>
          <h3>Person Photo</h3>
          <%= file_field_tag :avatar %>
          <h4>※アップロード前に必ず正方形に成形すること！</h4>
          <input type="submit" value="送信" class="btn btn-primary withripple">
        </div>
      <% end %>
    </div>
  </div>
</div>
