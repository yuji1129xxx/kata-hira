<div class="col-lg-12">
  <div class="row form">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <%= link_to "Back to Top", "/admin" %>
    </div>
    <% @resources.each do |resource| %>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <%= image_tag(resource_photo(resource), :class => "img-responsive") %>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <h3><%= resource.name %></h3>
        <h4>keywords</h4>
        <% resource.keywords.each do |keyword| %>
          <p>◆ <%= keyword.name %></p>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <br>
        <p><%= br(resource.detail) %></p>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <%= link_to "編集", edit_resource_path(resource), :class => "btn btn-info normal" %>
      </div>
    <% end %>
    <%= paginate(@resources) %>
  </div>
</div>
