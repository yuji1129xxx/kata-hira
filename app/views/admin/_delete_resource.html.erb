<div class="col-lg-12">
  <div class="row form">
    <% @resources.each do |resource| %>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <% if resource.avatar.present? %>
          <%= image_tag resource.avatar.url(:medium) %>
        <% else %>
          <%= image_tag("no_image.png", :size => "248×248") %>
        <% end %>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <h3><%= resource.name %></h3>
        <h4>keywords</h4>
        <% resource.keywords.each do |keyword| %>
          <p>◆ <%= keyword.name %></p>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <%= link_to "削除", resource_path(resource), method: :delete, :class => "btn btn-info normal" %>
      </div>
    <% end %>
    <%= paginate(@resources) %>
  </div>
</div>
