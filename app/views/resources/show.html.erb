<div class="row form">
  <div class="col-xs-6 col-sm-6 col-md-6">
    <%= image_tag(resource_photo(@resource), :class => "img-responsive") %>
  </div>
  <div class="col-xs-6 col-sm-6 col-md-6">
    <h3><%= @resource.name %></h3>
    <h4>keywords</h4>
    <% @resource.keywords.each do |keyword| %>
      <p>◆ <%= keyword.name %></p>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12">
    <br>
    <p><%= br(@resource.detail) %></p>
    <%= link_to "このひらがなを選択", new_event_path(resource_id: @resource.id, person_id: params[:person_id]), :class => "btn btn-info normal" %>
  </div>
</div>

