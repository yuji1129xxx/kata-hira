<div class="row login_bg">
  <div class="col-xs-12 col-sm-12 col-md-12 center">
    <%= image_tag("login.png", :class => "img-responsive") %>
    <h2>カタひらで遊ぶにはログインしてね！</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'input form-control' %></br>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード', class: 'input form-control' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
            <label>
              <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1">
              <%= f.label :ログイン情報を記憶する, class: 'memory-check' %>
            </label>
        </div>
      <% end -%>
      <%= f.submit class: 'btn btn-primary withripple', value: 'ログイン' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

