<div class="row login_bg">
  <div class="col-xs-12 col-sm-12 col-md-12 center">
    <%= image_tag("login.png", :class => "img-responsive") %>
    <h2>会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autocomplete: "off", autofocus: true, placeholder: 'メールアドレス', class: 'input form-control' %></br>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード（8文字以上）', class: 'input form-control' %></br>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワード（確認）', class: 'input form-control' %>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn btn-primary withripple', value: '新規登録' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
